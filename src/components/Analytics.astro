---
export interface Props {
  tagId: String;
}

const { tagId } = Astro.props;
---

<Fragment>
  <!-- Google tag (gtag.js) -->
  <script async src=`https://www.googletagmanager.com/gtag/js?id=${tagId}`
  ></script>
  <script define:vars={{ tagId: tagId }}>
    window.dataLayer = window.dataLayer || [];
    function gtag() {
      dataLayer.push(arguments);
    }
    gtag("js", new Date());

    gtag("config", tagId);
  </script>
</Fragment>
